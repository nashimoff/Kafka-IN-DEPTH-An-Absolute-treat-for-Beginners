package com.pocmaven;

public class ConcatenateValues {

    public String concatFnameLname(String fname, String lname){

        String outputConcatenateResult = "";

        if (fname == "" && lname == ""){
            outputConcatenateResult = "Both first name and last name are empty";
        } else if (fname == "" || lname == "") {
            outputConcatenateResult = "Either first name OR last name are empty";
        } else  {
            outputConcatenateResult = fname.concat(lname);
        }

        System.out.println(outputConcatenateResult);
        return outputConcatenateResult;
    }
}